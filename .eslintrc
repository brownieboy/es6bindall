{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "jsx": true,
      "classes": true
    }
  },
  "extends": ["eslint"],
  "rules": {
    "indent": "off",
    "dot-notation": "off",
    "semi": 2,
    "func-style": [2, "declaration", {"allowArrowFunctions": true}],
    "valid-jsdoc": [
      2,
      {
        "prefer": {
          "return": "return"
        }
      }
    ]
  }
}